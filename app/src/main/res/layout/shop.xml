<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tienda"
    android:orientation="vertical">

    <view
        android:id="@+id/view6"
        class="com.example.billy.jumpit.controller.activities.gameViews.PowerUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="90dp"
        android:alpha="1"
        android:visibility="visible" />

    <view
        android:id="@+id/view5"
        class="com.example.billy.jumpit.controller.activities.gameViews.Skin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="90dp"
        android:alpha="1"
        android:visibility="visible" />

    <view
        android:id="@+id/view7"
        class="com.example.billy.jumpit.controller.activities.gameViews.Gems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/exitBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:visibility="visible"
        app:srcCompat="@drawable/buttoncancel" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/exitBtn"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="32dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/skinBtnShop"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/skinsbtn"
            app:srcCompat="?attr/actionModeBackground" />

        <ImageButton
            android:id="@+id/powerupBtnShop"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/powerup"
            app:srcCompat="?attr/actionModeBackground" />

        <ImageButton
            android:id="@+id/gemas"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gems"
            app:srcCompat="?attr/actionModeBackground" />

    </LinearLayout>

</RelativeLayout>