<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/photoGemasBuy"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_above="@+id/buttonGems"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignEnd="@+id/buttonGems"
        android:layout_alignStart="@+id/buttonGems" />


    <TextView
        android:id="@+id/eurosBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonGems"
        android:layout_alignEnd="@+id/buttonGems"
        android:layout_marginEnd="21dp"
        android:elevation="23dp"
        android:text="4500"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/buttonGems"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/buybtndonator" />

</RelativeLayout>