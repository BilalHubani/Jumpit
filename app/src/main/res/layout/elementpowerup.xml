<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="170dp"
    android:background="@drawable/interiordelinteroir"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/namepowerup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textDescripcio"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_below="@+id/namepowerup"
        android:layout_toEndOf="@+id/photopowerup"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/photopowerup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/namepowerup"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:layout_toStartOf="@+id/relativeLayout"
        android:adjustViewBounds="true"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_alignBottom="@+id/photopowerup"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/dineroDonatorShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:elevation="23dp"
            android:textColor="?android:attr/colorBackground"
            tools:text="100" />

        <TextView
            android:id="@+id/dineroGoldShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="2dp"
            android:elevation="23dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="100" />

        <Button
            android:id="@+id/buttonGoldShop"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/btnbuyshop"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonDonatorShop"
            android:layout_width="111dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:background="@drawable/buybtndonator"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>